{
  "name": "npm-pkg-lint",
  "version": "1.6.0",
  "description": "Opinionated linter for NPM package tarball and package.json metadata",
  "keywords": [
    "lint",
    "npm"
  ],
  "homepage": "https://github.com/ext/npm-pkg-lint",
  "bugs": {
    "url": "https://github.com/ext/npm-pkg-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/npm-pkg-lint.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "main": "dist/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin",
    "dist",
    "!**/*.d.ts",
    "!**/*.js.map",
    "!**/*.spec.js"
  ],
  "scripts": {
    "prebuild": "tsc",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node12.0 --analyze --minify --outdir=dist",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "self-test": "node bin/index.js",
    "test": "jest"
  },
  "commitlint": {
    "extends": "@html-validate"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist",
      "tests/fixtures"
    ]
  },
  "devDependencies": {
    "@html-validate/commitlint-config": "2.1.7",
    "@html-validate/eslint-config": "5.3.4",
    "@html-validate/eslint-config-jest": "5.3.4",
    "@html-validate/eslint-config-typescript": "5.3.4",
    "@html-validate/jest-config": "3.0.1",
    "@html-validate/prettier-config": "2.0.0",
    "@html-validate/stylish": "2.0.0",
    "@types/argparse": "2.0.10",
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.0",
    "@types/node": "12.20.46",
    "@types/semver": "7.3.9",
    "@types/tar": "6.1.1",
    "@types/tmp": "0.2.3",
    "argparse": "2.0.1",
    "esbuild": "0.14.21",
    "execa": "5.1.1",
    "find-up": "5.0.0",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "semver": "7.3.5",
    "tar": "6.1.0",
    "tmp": "0.2.1",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "renovate": {
    "extends": [
      "gitlab>html-validate/renovate-config"
    ],
    "packageRules": [
      {
        "matchPackageNames": [
          "@html-validate/stylish",
          "argparse",
          "execa",
          "find-up",
          "semver",
          "tar",
          "tmp"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}

{
  "name": "npm-pkg-lint",
  "version": "1.5.0",
  "description": "Opinionated linter for NPM package tarball and package.json metadata",
  "keywords": [
    "lint",
    "npm"
  ],
  "homepage": "https://github.com/ext/npm-pkg-lint",
  "bugs": {
    "url": "https://github.com/ext/npm-pkg-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/npm-pkg-lint.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "main": "dist/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin",
    "dist",
    "!**/*.d.ts",
    "!**/*.js.map",
    "!**/*.spec.js"
  ],
  "scripts": {
    "build": "tsc",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "self-test": "node bin/index.js",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "commitlint": {
    "extends": "@html-validate"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist",
      "tests/fixtures"
    ]
  },
  "dependencies": {
    "@html-validate/stylish": "^2.0.0",
    "argparse": "^2.0.0",
    "execa": "^5.1.0",
    "find-up": "^5.0.0",
    "semver": "^7.3.0",
    "tar": "^6.0.0",
    "tmp": "^0.2.0"
  },
  "devDependencies": {
    "@html-validate/commitlint-config": "2.1.5",
    "@html-validate/eslint-config": "5.3.0",
    "@html-validate/eslint-config-jest": "5.3.0",
    "@html-validate/eslint-config-typescript": "5.3.0",
    "@html-validate/jest-config": "3.0.1",
    "@html-validate/prettier-config": "2.0.0",
    "@html-validate/semantic-release-config": "3.0.4",
    "@types/argparse": "2.0.10",
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.0",
    "@types/node": "12.20.39",
    "@types/semver": "7.3.9",
    "@types/tar": "6.1.1",
    "@types/tmp": "0.2.3",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.5",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "renovate": {
    "extends": [
      "gitlab>html-validate/renovate-config"
    ]
  }
}
